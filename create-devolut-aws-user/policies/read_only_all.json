{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "ec2:Describe*",
          "ec2:Get*",
          "ec2:List*"
        ],
        "Resource": "*"
      },
      {
        "Effect": "Allow",
        "Action": [
          "iam:ChangePassword"
        ],
        "Resource": [
          "arn:aws:iam::*:user/${aws:username}"
        ]
      },
      {
        "Effect": "Allow",
        "Action": [
          "iam:GetAccountPasswordPolicy"
        ],
        "Resource": "*"
      }
    ]
 }
